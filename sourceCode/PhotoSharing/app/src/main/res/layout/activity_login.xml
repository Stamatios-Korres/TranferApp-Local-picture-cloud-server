<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.timos.photo_sharing.Activities.LoginActivity">

    <EditText
        android:id="@+id/editText2"
        style="@style/Base.Theme.AppCompat.Light"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:textColorHint="#ffff2341"
        android:backgroundTint="@null"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="237dp"
        android:layout_height="52dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="@string/login_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText"
        android:textColorHint="#ffff2341"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.EditText"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
        <!--android:background="@drawable/back"/>-->

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="52dp"
        android:fontFamily="monospace"
        android:text="@string/login_button"

        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        android:shape="rectangle"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />
    <!--android:textColor="@android:color/holo_blue_dark"-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="265dp"
        android:layout_height="62dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/Server_state"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="21sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane  xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ImageView fx:id="displayedImage" fitHeight="341.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox alignment="CENTER" prefWidth="200.0" style="-fx-background-color: #416baf;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" styleClass="my-button" stylesheets="@application.css" text="&lt; prev">
               <HBox.margin>
                  <Insets right="1.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" styleClass="my-button" stylesheets="@application.css" text="next &gt;">
               <HBox.margin>
                  <Insets left="1.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
